generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialActions"]
  output   = "./src/prisma/client"
}

datasource db {
  provider = "sqlite"
  // url      = "file:./pragma.db"
  url = env("DATABASE_URL")
}

model nodes {
  id         Int     @id @default(autoincrement())
  journal    String?
  date       String?
  idx        Int?
  type       String?
  contents   String?
  attributes String?
}

model journals {
  id       String     @id @default(cuid())
  name     String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  Document  documents[]
  @@unique([name], name: "journals_name_uniq")
}

model documents {
  id       String     @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  title     String?
  content   String
  journalId String
  journal   journals  @relation(fields: [journalId], references: [id], onDelete: Cascade)
  @@index([title], name: "documents_title_idx")
  @@index([createdAt], name: "documents_createdat_idx")
}
